<%= form_for @game do |f| %>
  <fieldset>
    <p>    
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :releasedate %>
      <%= f.date_select :releasedate %>
    </p>

    <p>
      <%= f.label :boxart, 'Box Art (link to jpg or png)' %>
      <%= f.text_field :boxart %>
    </p>
  </fieldset>
  <%= f.submit %>
<% end %>