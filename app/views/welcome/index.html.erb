<h1>Welcome to Critic</h1>
<p>
  <% if can? :create, Game %>
    <%= link_to "Add a Game", new_game_path %>
  <% end %>
  <% if can? :create, Editor %>
    <%= link_to "Add an Editor", new_editor_path %>
  <% end %>
</p>
<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Games</h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped">
          <tr>
            <th scope='col'>Title</th>
            <th scope='col'>Average</th>
            <% if can? :update, Game %>
              <th></th>
            <% end %>
            <% if can? :destroy, Game %>
              <th></th>
            <% end %>
          </tr>
          <%= render @games %>
        </table>
        <div><%= link_to 'all games ->', games_path %></div>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Editors</h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped">
          <%= render @editors %>
        </table>
        <div><%= link_to 'all editors -> ', editors_path %></div>
      </div>
    </div>
  </div>
</div>
